}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Index </title>
</head>
<h2>Add Producer</h2>
<style>
    .form-horizontal .control-label {
        text-align: left;
    }
</style>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container register-form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form">
                <div class="note">
                    
                </div>
                <div class="form-content">
                    <div class="row">
                        @*column1*@
                        <div class="col-md-offset-3 col-md-12">
                            <div class="form-group">
                                @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name", style = "width:300px" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Sex, new { htmlAttributes = new { @class = "form-control", placeholder = "EmailID", style = "width:300px" } })
                                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(model => model.DOB, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control", placeholder = "EmailID", style = "width:300px" } })
                                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control", placeholder = "ConfirmPassword", style = "width:300px" } })
                                    @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <br />
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <input type="submit" value="Submit" class="btnSubmit" />

                        </div>
                    </div>

                </div>
            </div>
        </div>
    }

</body>
</html>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
